doctype html
html.h-100
	head
		title #{title}
		link(
			rel="stylesheet"
			href="https://use.fontawesome.com/releases/v5.6.3/css/all.css"
			crossorigin="anonymous"
		)
		link(
			rel="stylesheet"
			href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
			crossorigin="anonymous"
		)
		link(
			rel="stylesheet"
			href=`https://bootswatch.com/4/${theme || "minty"}/bootstrap.min.css`
		)
		meta(
			name="viewport"
			content="width=device-width, initial-scale=1.0"
		)

body.h-100(style={
	"background-image": `url(${backgroundUrl || "https://via.placeholder.com/1600x900"})`,
	"background-position": "center",
	"background-repeat": "no-repeat",
	"background-size": "cover"
})
	.container.h-100
		.row
			.col-sm
				.card.m-4
					.card-body
						h1.text-center.mb-4= title
						each link in links
							a.btn.btn-lg.m-2(
								href=link.url
								class=`btn-${link.buttonType || "outline-dark"}`+(link.class || "")
								title=link.name
							)
								if link.icon
									i(
										alt=link.alt
										class=link.icon
										style={ "font-size": "2em", "vertical-align": "middle" }
									)
								else if link.image
									img(
										src=link.image
										alt=link.alt
										style={ width: "2em", height: "2em" }
									)

								span.ml-2= link.name